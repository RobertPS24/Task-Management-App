<Window x:Class="TaskManagementApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register"
        Height="570"
        Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Create Account" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Username -->
        <StackPanel Margin="0,0,0,10">
            <Label Content="Username"/>
            <TextBox x:Name="UsernameBox" FontSize="14"/>
        </StackPanel>

        <!-- Email -->
        <StackPanel Margin="0,0,0,10">
            <Label Content="Email"/>
            <TextBox x:Name="EmailBox" FontSize="14"/>
        </StackPanel>

        <!-- Password -->
        <StackPanel Margin="0,0,0,10">
            <Label Content="Password"/>
            <PasswordBox x:Name="PasswordBox" FontSize="14"/>
        </StackPanel>

        <!-- Profile Picture -->
        <StackPanel Margin="0,10,0,10">
            <Label Content="Profile Picture"/>
            <Button Content="Choose Picture" Click="ChoosePicture_Click" Width="120"/>
            <Image x:Name="ProfileImage" Height="100" Width="100" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <Button Content="Register" Click="Register_Click" Height="35"/>
        <Button Content="Back to Login" Click="GoToLogin_Click" Margin="0,10,0,0" Height="30"/>
    </StackPanel>
</Window>
